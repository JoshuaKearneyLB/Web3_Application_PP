{
  "compilerOptions": {
    "types": [
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "migrations/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "app/node_modules"
  ]
}
